<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <property name="tableName" value="${prefixTableName}FOOTBALL_CLUB" global="false" />

    <changeSet id="${tableName}-1" author="suongnv">
        <preConditions onFail="CONTINUE" onFailMessage="${tableName} existed">
            <not>
                <tableExists tableName="${tableName}" />
            </not>
        </preConditions>
        <comment>
            Create new ${tableName}
        </comment>
        <createTable tableName="${tableName}">
            <column name="FC_ID" type="bigint" />
            <column name="FC_NAME" type="varchar(255)" />
            <column name="DESCRIPTION" type="varchar(2000)" />
            <column name="STATUS" type="number" />
            <column name="SLUG" type="varchar(2000)" />
            <column name="CREATED_DATE" type="date" />
            <column name="CREATED_BY" type="varchar(255)" />
            <column name="UPDATED_DATE" type="date" />
            <column name="UPDATED_BY" type="varchar(255)" />
        </createTable>
        <addPrimaryKey tableName="${tableName}" columnNames="FC_ID" />
        <addAutoIncrement tableName="${tableName}" columnName="FC_ID" columnDataType="bigint" />
        <addNotNullConstraint tableName="${tableName}" columnName="FC_NAME" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="${tableName}" columnName="STATUS" columnDataType="number"/>
    </changeSet>
</databaseChangeLog>