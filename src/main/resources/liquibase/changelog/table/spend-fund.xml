<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <property name="tableName" value="${prefixTableName}SPEND_FUND" global="false" />

    <changeSet id="${tableName}-1" author="suongnv">
        <preConditions onFail="CONTINUE" onFailMessage="${tableName} existed">
            <not>
                <tableExists tableName="${tableName}" />
            </not>
        </preConditions>
        <comment>
            Create new ${tableName}
        </comment>
        <createTable tableName="${tableName}">
            <column name="SPEND_ID" type="bigint"/>
            <column name="AMOUNT_MONEY" type="number" />
            <column name="DESCRIPTION" type="varchar(2000)" />
            <column name="FC_ID" type="number" />
            <column name="STATUS" type="varchar(255)" />
            <column name="CREATED_DATE" type="date" />
            <column name="CREATED_BY" type="varchar(255)" />
            <column name="UPDATED_DATE" type="date" />
            <column name="UPDATED_BY" type="varchar(255)" />
        </createTable>

        <addPrimaryKey tableName="${tableName}" columnNames="SPEND_ID" />
        <addAutoIncrement tableName="${tableName}" columnName="SPEND_ID" columnDataType="bigint" />
        <addNotNullConstraint tableName="${tableName}" columnName="AMOUNT_MONEY" columnDataType="number" />
        <addNotNullConstraint tableName="${tableName}" columnName="FC_ID" columnDataType="number"/>
        <addNotNullConstraint tableName="${tableName}" columnName="STATUS" columnDataType="varchar(255)"/>
    </changeSet>
</databaseChangeLog>