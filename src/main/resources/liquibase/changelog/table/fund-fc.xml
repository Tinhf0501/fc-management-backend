<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <property name="tableName" value="${prefixTableName}FUND_FC" global="false" />

    <changeSet id="${tableName}-1" author="suongnv">
        <preConditions onFail="CONTINUE" onFailMessage="${tableName} existed">
            <not>
                <tableExists tableName="${tableName}" />
            </not>
        </preConditions>
        <comment>
            Create new ${tableName}
        </comment>
        <createTable tableName="${tableName}">
            <column name="FUND_ID" type="bigint"/>
            <column name="FC_ID" type="number" />
            <column name="AMOUNT" type="number" />
            <column name="DATE_FUND" type="date"/>
            <column name="CREATED_DATE" type="date" />
            <column name="CREATED_BY" type="varchar(255)" />
            <column name="UPDATED_DATE" type="date" />
            <column name="UPDATED_BY" type="varchar(255)" />
        </createTable>

        <addPrimaryKey tableName="${tableName}" columnNames="FUND_ID" />
        <addAutoIncrement tableName="${tableName}" columnName="FUND_ID" columnDataType="bigint"/>
        <addNotNullConstraint tableName="${tableName}" columnName="FC_ID" columnDataType="number"/>
        <addNotNullConstraint tableName="${tableName}" columnName="AMOUNT" columnDataType="number"/>
        <addNotNullConstraint tableName="${tableName}" columnName="DATE_FUND" columnDataType="date"/>
    </changeSet>
</databaseChangeLog>