<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <property name="tableName" value="${prefixTableName}RESOURCE" global="false" />

    <changeSet id="${tableName}-1" author="suongnv">
        <preConditions onFail="CONTINUE" onFailMessage="${tableName} existed">
            <not>
                <tableExists tableName="${tableName}" />
            </not>
        </preConditions>
        <comment>
            Create new ${tableName}
        </comment>
        <createTable tableName="${tableName}">
            <column name="RESOURCE_ID" type="bigint"/>
            <column name="PATH" type="varchar(1000)" />
            <column name="MEDIA_TYPE" type="varchar(255)" />
            <column name="KEY_ID" type="number" />
            <column name="KEY_TYPE" type="number"/>
            <column name="DESCRIPTION" type="varchar(2000)" />
            <column name="PROVIDER" type="varchar(255)" />
            <column name="CREATED_DATE" type="date" />
            <column name="CREATED_BY" type="varchar(255)" />
            <column name="UPDATED_DATE" type="date" />
            <column name="UPDATED_BY" type="varchar(255)" />
        </createTable>

        <addPrimaryKey tableName="${tableName}" columnNames="RESOURCE_ID" />
        <addAutoIncrement tableName="${tableName}" columnName="RESOURCE_ID" columnDataType="bigint"/>
        <addNotNullConstraint tableName="${tableName}" columnName="PATH" columnDataType="varchar(1000)"/>
        <addNotNullConstraint tableName="${tableName}" columnName="MEDIA_TYPE" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="${tableName}" columnName="KEY_ID" columnDataType="number"/>
        <addNotNullConstraint tableName="${tableName}" columnName="KEY_TYPE" columnDataType="number"/>
        <addNotNullConstraint tableName="${tableName}" columnName="PROVIDER" columnDataType="varchar(255)"/>
    </changeSet>
</databaseChangeLog>